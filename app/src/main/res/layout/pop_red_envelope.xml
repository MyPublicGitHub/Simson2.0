<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_60"
    android:paddingBottom="@dimen/dp_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/ic_bg_main_redpacket"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            app:srcCompat="@drawable/ic_close_white_24dp" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:src="@mipmap/ic_logo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="新生集团"
            android:textColor="@color/colorRedEnvelopeText"
            android:textSize="@dimen/dp_15" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="是肯德基和不是是"
            android:textColor="@color/colorRedEnvelopeText"
            android:textSize="@dimen/dp_15" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:text="恭喜发财，大吉大利！"
            android:textColor="@color/colorRedEnvelopeText"
            android:textSize="@dimen/dp_25" />

        <ImageView
            android:id="@+id/iv_open"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="center"
            android:src="@mipmap/ic_main_redpacket_open" />
    </LinearLayout>
</LinearLayout>