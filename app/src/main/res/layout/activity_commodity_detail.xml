<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_230"
            android:background="@drawable/no_banner" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="@dimen/dp_10"
            android:text="【打算发个】收到货接口好的空间和电话刚才吧白金卡费"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="￥4600.00"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="￥6600.00"
                android:textColor="@color/colorBlack_4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/colorRed"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="促销"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorWhite"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_hospital_img"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@mipmap/ic_placeholder" />

            <TextView
                android:id="@+id/tv_hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@+id/iv_hospital_img"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="南京新生医院"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_hospital_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_hospital_img"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_hospital_img"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="南京市鼓楼区中山北路246号"
                android:textColor="@color/colorBlack_4"
                android:textSize="@dimen/sp_12" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/hospital_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_43"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_white_main"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/ic_shop_detail_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="医院主页"
                    android:textColor="@color/colorMain" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_43"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/shape_corner_white_main"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/ic_shop_detail_call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="电话咨询"
                    android:textColor="@color/colorMain" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="评价（256）"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/ic_open"
                android:text="查看更多"
                android:textColor="@color/colorBlack_4"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_1"
            android:padding="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="综合评价（256）"
                android:textColor="@color/colorBlack_4"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_total_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="5.0"
                    android:textColor="@color/colorBlack_4"
                    android:textSize="@dimen/sp_16" />

                <RatingBar
                    android:id="@+id/rate"
                    android:layout_marginLeft="@dimen/dp_10"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:rating="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环境：5.0"
                    android:textColor="@color/colorBlack_4"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="环境：5.0"
                    android:textColor="@color/colorBlack_4"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/serve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="服务：5.0"
                    android:textColor="@color/colorBlack_4"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="效果：5.0"
                    android:textColor="@color/colorBlack_4"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@mipmap/ic_placeholder" />

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_toRightOf="@+id/iv_1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="金先生"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_1"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_1"
                    android:text="在这边植发有大厦大家肯定会大家伙的公交卡从圣诞节和大家看好见客户返回"
                    android:textColor="@color/colorBlack_4"
                    android:textSize="@dimen/sp_12" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
